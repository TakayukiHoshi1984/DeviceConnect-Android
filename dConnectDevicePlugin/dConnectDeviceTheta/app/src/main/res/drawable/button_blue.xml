<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" android:useLevel="false">
            <solid android:color="@android:color/darker_gray"/>
            <stroke
                android:color="#CCCCCC"
                android:width="1dp"/>

            <corners
                android:radius="10dp"/>
        </shape>
    </item>

    <!-- When the button is focus -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff12ac93"/>
            <stroke android:width="1dp" android:color="#ff73c08f"/>
            <corners android:radius="2dp"/>
            <padding android:top="12dp" android:left="24dp" android:bottom="12dp" android:right="24dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle" android:useLevel="false">
            <solid android:color="#159eff"/>
            <stroke
                android:color="#CCCCCC"
                android:width="1dp"/>

            <corners
                android:radius="10dp"/>
        </shape>
    </item>
</selector>
